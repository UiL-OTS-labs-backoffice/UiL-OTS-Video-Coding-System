<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="createWindowsInstallers" name="Create Runnable Jar for Project ActuallyWorkingVideoCodingSystem with Jar-in-Jar Loader">

    <taskdef name="nsis" classname="com.danielreese.nsisant.Task">
        <classpath location="nsisant-1.3.jar"/>
    </taskdef>
    
    <!-- variable propertjes -->
	<property name="version" value="3.8.6"/>
	<property name="jarname" value="VideoCodingUiLOTS-3.8.6.jar"/>
	<property name="output.dir" value="output/version-${version}"/>
    <!-- end of variable properties -->

    <property name="base.dir" value=".."/>
    <property name="src.dir" value="${base.dir}/src"/>
    <property name="lib.dir" value="${base.dir}/lib" />
    <property name="classes.dir" value="${base.dir}/bin"/>

    <echo message="source dir: ${src.dir}"/>
    <echo message="lib dir: ${lib.dir}"/>
    <echo message="classes dir: ${classes.dir}"/>

    <path id="lib.path.id">
        <fileset dir="${lib.dir}" />
    </path>
    
    <target name="clean">
        <echo message="Cleaning up: ${output.dir}"/>
        <delete dir="${output.dir}"/>
        <echo message="Cleaning up: ${classes.dir}"/>
        <delete dir="${classes.dir}"/>
    </target>
 
    <target name="compile" depends="clean">
        <echo message="Creating directory: ${classes.dir}"/>
        <mkdir dir="${classes.dir}"/>
        <echo message="Compiling"/>
        <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="lib.path.id"/>
    </target>

    <target name="create_run_jar" depends="compile">
        <mkdir dir="${output.dir}"/>
        <jar destfile="${output.dir}/${jarname}">
            <manifest>
                <attribute name="Class-Path" value="."/>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="UiLOTSVideoCodingSystem"/>
                <attribute name="Rsrc-Class-Path" value="./ jna-3.5.2.jar vlcj-2.4.0.jar miglayout-4.0-swing.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${classes.dir}"/>
            <fileset dir="${lib.dir}"/>
            <zipfileset dir="${lib.dir}" includes="jna-3.5.2.jar"/>
            <zipfileset dir="${lib.dir}" includes="vlcj-2.4.0.jar"/>
            <zipfileset dir="${lib.dir}" includes="miglayout-4.0-swing.jar"/>
        </jar>
    </target>

    <target name="createWindowsInstallers" depends="create_run_jar">
        <nsis script="windows/installer/VideoCodingSystemInstaller.nsi" verbosity="4" out="${output.dir}/installer-build.log" noconfig="yes">
            <scriptcmd cmd="AutoCloseWindow true"/>
        </nsis>

        <nsis script="windows/installer/VideoCodingSystemLauncher.nsi" verbosity="4" out="${output.dir}/launcher-build.log" noconfig="yes">
            <scriptcmd cmd="AutoCloseWindow true"/>
        </nsis>
    </target>


</project>